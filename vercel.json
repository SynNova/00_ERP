{
  "version": 2,
  "buildCommand": "echo 'No build needed - using serverless functions'",
  "outputDirectory": ".",
  "routes": [
    {
      "src": "/.well-known/mcp",
      "dest": "/api/.well-known/mcp"
    },
    {
      "src": "/sse",
      "dest": "/api/sse"
    },
    {
      "src": "/rpc",
      "dest": "/api/rpc"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/",
      "dest": "/api/index"
    }
  ]
} 