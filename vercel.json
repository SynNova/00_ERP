{
  "version": 2,
  "routes": [
    {
      "src": "/sse",
      "dest": "/api/sse"
    },
    {
      "src": "/rpc",
      "dest": "/api/rpc"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/",
      "dest": "/api/index"
    }
  ],
  "env": {
    "VHSYS_TOKEN": "@vhsys_token",
    "VHSYS_SECRET": "@vhsys_secret",
    "VHSYS_BASE_URL": "@vhsys_base_url"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
} 